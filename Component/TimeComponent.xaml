<UserControl
    x:Class="WaybillApp.Component.TimeComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://prismlibrary.com/"
    x:Name="UserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button
            Margin="4,4,0,4"
            Padding="8,4,0,4"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            Click="ButtonBase_OnClick"
            Command="{Binding OpenDialogCommand, ElementName=UserControl}"
            Foreground="Gray">
            <materialDesign:PackIcon
                Width="24"
                Height="24"
                Kind="Clock" />
        </Button>
        <TextBox
            Width="150"
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            materialDesign:HintAssist.Hint="ساعت"
            IsReadOnly="True"
            Text="{Binding Time, ElementName=UserControl, FallbackValue='', StringFormat=HH:mm}"
            TextAlignment="Right" />
    </StackPanel>
</UserControl>
